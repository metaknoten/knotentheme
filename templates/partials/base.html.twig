{% set extension = config.theme.production ? '.min' : '' %}
<!DOCTYPE html>
<html lang="{{ (grav.language.getActive ?: grav.config.site.default_lang)|e }}">
<head>
    {% block head %}
        <meta charset="utf-8" />
        <title>{% if header.title %}{{ header.title|e }} | {% endif %}{{ site.title|e }}</title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% include 'partials/metadata.html.twig' %}

        <meta http-equiv="cache-control" content="no-cache"/>
        <meta http-equiv="Pragma" content="no-cache"/>
        <meta http-equiv="Expires" content="-1"/>

        <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png')|e }}" />
        <link rel="canonical" href="{{ page.url(true, true)|e }}" />

    {% endblock head %}

    {% block stylesheets %}
        {% do assets.addCss('theme://dist/css/site' ~ extension ~ '.css', 98) %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

    {% block assets deferred %}
        {{ assets.css()|raw }}
        {{ assets.js()|raw }}
    {% endblock %}
</head>
<body id="top" class="flex flex-col min-h-screen {{ page.header.body_classes|e }} {{ config.theme.production ?: 'debug-screens' }}"></body>

{% block header %}

<div class="max-w-screen-md w-5/6 mx-auto">
    <div class="mt-2 flex flex-col flex-wrap gap-y-3 relative">
            <a class="md:-ml-8 block imageBlur" href="{{ home_url|e }}">
                <img class="max-h-24" src="{{ url('theme://images/logo.svg') }}" alt="{{ site.title }}"/>
            </a>
            {% block header_navigation %}
                <nav class="main-nav my-4">
                    {% include 'partials/navigation.html.twig' %}
                </nav>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block body %}
    <section class="flex-1 max-w-screen-md w-5/6 mx-auto py-14" id="body">
        <div class="prose">
            <div class="meta">{{ "THEME_KNOTENTHEME.CONTENT"|t|e}}</div>
            {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <footer class="max-w-screen-md w-5/6 mx-auto py-10">
            <p class="meta">{{ "THEME_KNOTENTHEME.LANGUAGE"|t|e}}</p>
            {% include 'partials/langswitcher.html.twig' %}
            <p class="meta mt-4">Social Media</p>
                <li class="inline-block"><a href="https://twitter.com/metaknoten" target="_blank">Twitter</a></li>
                <li class="inline-block"><a href="https://mastodon.social/@metaknoten" target="_blank">Mastodon</a></li>
                <li class="inline-block"><a href="https://www.facebook.com/MetaKnoten-108029651880268" target="_blank">Facebook</a></li>
            </ul>
    </footer>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
