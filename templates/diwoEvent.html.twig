{% extends 'imagePage.html.twig' %}
{% set keywords = ['Glitch', 'Open Hardware', 'Open Source', 'Screen Printing', 'Sound Design', 'Media Streaming', 'Welding', 'Coding', 'DIY', 'Electronics', 'Free Software'] %}
{% set smallHeaderImage = true %}


{% block mainButtons %}
    {% if page.header.ticketURL %}
        {# Disabled #}
    {% endif %}
{% endblock %}



{% block aboveTitle %}
<div class="mb-4 prose">
    <a href="./#timetable" class="flex items-center gap-x-2">
        <svg class="fill-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24">
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
        </svg>
        {{ "THEME_KNOTENTHEME.BACK"|t|e}}
    </a>
</div>
{% endblock %}

{% block aboveContent %}
<div class="w-full pb-4 prose ">
    <div class="flex gap-x-10">
        <div>
            <p class="flex items-center my-2 gap-x-4">
                <svg class="dark:fill-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24">
                    <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
                </svg>
                <span>{{page.header.day}} | {{page.header.time}} Uhr<span>
            </p>
            {% if page.header.author %}
                <p class="flex items-center gap-x-4">
                    <svg class="dark:fill-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24">
                        <circle cx="9" cy="9" r="4"/>
                        <path d="M9 15c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4zm7.76-9.64l-1.68 1.69c.84 1.18.84 2.71 0 3.89l1.68 1.69c2.02-2.02 2.02-5.07 0-7.27zM20.07 2l-1.63 1.63c2.77 3.02 2.77 7.56 0 10.74L20.07 16c3.9-3.89 3.91-9.95 0-14z"/>
                    </svg>
                    {% if page.header.authorURL %}
                        <a href="{{page.header.authorURL}}" target="_blank">{{page.header.author}}</a>
                    {% else %}
                        {{page.header.author}}
                    {% endif %}
                    
                </p>
            {% endif %}
            
        </div>
        <div class="self-center">
            {% include "partials/eventTag.html.twig" with {page: page} %}
        </div>
    </div>
</div>
{% endblock %}



